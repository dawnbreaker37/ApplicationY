                        <button class="btn btn-standard-not-animated btn-sm w-100" type="button" data-bs-toggle="collapse" data-bs-target="#AdditionalInfo_Collapse" aria-expanded="false" aria-controls="AdditionalInfo_Collapse"> <i class="fas fa-ellipsis-h"></i><br/>Additional Info</button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-standard-not-animated btn-sm smallside-btn-open-container w-100" id="LinkEdit_Container-Open"> <i class="fas fa-link"></i><br />Edit Link(s)</button>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <button type="button" class="btn btn-standard-not-animated btn-sm smallside-btn-open-container w-100" id="EditDescription_Container-Open"> <i class="fas fa-pen-square"></i><br />Edit Description</button>
                    </div>
                    @if (!UserInfo.IsEmailChanged)
                    {
                        <div class="col">
                            <button type="button" class="btn btn-standard-not-animated info-popover btn-sm smallside-btn-open-container w-100" id="EmailChange_Container-Open" data-bs-custom-class="info-popover-show" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" data-bs-content="Click to change your email. Notice, that you can change you email once per account"> <i class="fas fa-inbox"></i><br />Edit Email</button>
                        </div>
                    }
                    else
                    {
                        <div class="col">
                            <button type="button" class="btn btn-standard-not-animated info-popover btn-sm smallside-btn-open-container w-100 disabled" data-bs-custom-class="info-popover-show" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" data-bs-content="You've already changed your email address once"> <i class="fas fa-inbox"></i><br />Disabled</button>
                        </div>
                    }
                </div>
            </div>
            <div class="collapse" id="AdditionalInfo_Collapse">
                <div class="card p-2 mt-2">
                    <div>
                        @if (UserInfo.CountryId == null)
                        {
                            <span class="h2 main-title-font-style"><span id="AY_Country">You haven't selected your country yet</span></span>
                        }
                        else
                        {
                            <span class="h2 main-title-font-style"><span id="AY_Country">@UserInfo.Country?.ISO, @UserInfo.Country?.Name</span></span>
                        }
                        <div></div>
                        @if (UserInfo.IsCompany)
                        {
                            <small class="card-text text-muted" id="AY_IsCompany">Company/Business</small>
                        }
                        else
                        {
                            <small class="card-text" id="AY_IsCompany">Personal Account</small>
                        }
                        <div class="mt-1"></div>
                        @if (UserInfo.CreatedAt == null)
                        {
                            <small class="card-text text-muted" id="AY_CreatedDate">No information about signing date</small>
                        }
                        else
                        {
                            <small class="card-text text-muted" id="AY_CreatedDate">Signed or created at: @UserInfo.CreatedAt?.ToString("dd/MM/yyyy")</small>
                        }
                        <div></div>
                        <button type="button" class="btn btn-text btn-sm mt-2 me-2 smallside-btn-open-container" id="EditPersonalInfo_Container-Open"> <i class="fas fa-pen-square"></i> Edit</button>
                        <a asp-controller="User" asp-action="Info" asp-route-Id="@UserInfo.SearchName" class="btn btn-text btn-sm mt-2 smallside-btn-open-container"> <i class="fas fa-user-circle"></i> Your page</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="bordered-container mt-2 p-2" id="TipsAndAdvices_Container">
            <button type="button" class="btn btn-standard-not-animated btn-hide float-end ms-1 btn-sm" id="TipsAndAdvices_Container-Close">Hide</button>
            <h5 class="h5">Tips & Advices</h5>
            <small class="card-text">Here're presented some tips and advices for filling out your account correctly</small>
            <div class="box-container bg-light p-2 mt-2">
                <h4 class="h4">1.</h4>
                <small class="card-text">Enter short and informative description about your or your company</small>
            </div>
            <div class="mt-2 box-container bg-light p-2">
                <h4 class="h4">2.</h4>
                <small class="card-text">Add your official logo or photo so people can be sure who you are</small>
            </div>
            <div class="mt-2 box-container bg-light p-2">
                <h4 class="h4">3.</h4>
                <small class="card-text">Add your official links to your other social platforms or websites</small>
            </div>
            <div class="mt-2 box-container bg-light p-2">
                <h4 class="h4">4.</h4>
                <small class="card-text">Verify your account and get the icon so people could rely on you</small>
            </div>
            <div class="mt-2 box-container bg-light p-2">
                <h4 class="h4">5.</h4>
                <small class="card-text">Try to create several posts with your project</small>
            </div>
            <div class="mt-2 box-container bg-light p-2">
                <h4 class="h4">6.</h4>
                <small class="card-text">Be active ane leave comments to other users</small>
            </div>
        </div>
        @if(VerificationInfo == null)
        {
            <div class="box-container shadow-sm bg-white mt-2 p-2" id="VerificationNotSent_Box">
                <h5 class="h5"> <i class="fas fa-check-circle text-official"></i> Verify your account</h5>
                <p class="card-text">Verify your account to become an official member of our community. This will provide you an verified account with the additional certificate icon behind your name, which is going to help and inform others about your officiality</p>
                <div class="bordered-container p-3 mt-3">
                    <div class="float-end ms-1">
                        <div class="row">
                            <div class="col">
                                <button type="button" class="btn btn-lg btn-standard-not-animated border-0 w-100"> <i class="fas fa-bell text-primary"></i> </button>
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-lg btn-standard-not-animated border-0 w-100"> <i class="far fa-comment-dots"></i> </button>
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-lg btn-standard-not-animated border-0 w-100"> <i class="fas fa-ellipsis-h"></i> </button>
                            </div>
                        </div>
                    </div>
                    <h3 class="h3 main-title-font-style">Eclipse <i class="fas fa-check-circle text-official smallside-modal-open-by-hover" id="VerifiedAccountInfo_Modal" data-content="This's an official and verified account of <span class='safe-font'>Eclipse</span>!"></i> </h3>
                    <small class="card-text">Some kind of profile description...</small>
                </div>
                <div class="mt-1">
                    <div>
                        <form method="post" asp-controller="Account" asp-action="QueueForVerification" id="QueueForVerification_Form">
                            <input type="hidden" name="Id" value="@UserInfo.Id" />
                            <button type="submit" class="btn btn-light btn-standard-with-no-colour">Verify now <i class="fas fa-certificate text-official"></i> </button>
                        </form>
                    </div>
                    <div class="ms-1">
                        <small class="card-text text-muted">You will need to verify your email. Note that the account email must be an official working email of your company (or either your official individual email address), which we will be able to check and submit</small>
                    </div>
                </div>
            </div>
            <div class="box-container mt-2 p-3 shadow-sm text-center" style="display: none;" id="VerificationWaiting_Box">
                <h2 class="h2"> <i class="fas fa-hourglass-half"></i> </h2>
                <h4 class="h4 safe-font">Verification request is sent</h4>
                <small class="card-text text-muted">Your verification request has been sent at <span class="safe-font" id="VerificationSentAt_Lbl"></span>. Please, wait until you'll receive the confirmation email</small>
            </div>
        }
        else
        {
            @if(!UserInfo.IsVerified)
            {
                <div class="box-container mt-2 p-3 shadow-sm text-center" id="VerificationWaiting_Box">
                    <h2 class="h2"> <i class="fas fa-hourglass-half"></i> </h2>
                    <h4 class="h4 safe-font">Verification request is sent</h4>
                    <small class="card-text text-muted">Your verification request has been sent at <span class="safe-font">@VerificationInfo.SentAt.ToShortDateString(), @VerificationInfo.SentAt.ToShortTimeString()</span>. Please, wait until you'll receive the confirmation email</small>
                </div>
            }
        }
    </div>
</div>