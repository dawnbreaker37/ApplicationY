    VerificationQueue? VerificationInfo = ViewBag.VerificationInfo;
    bool PermissionToChangePassword = ViewBag.PermissionToChangePassword;
    double ProfileFullnessPercentage = ViewBag.ProfileFullnessPercentage;
    int UserRole = ViewBag.RoleId;
