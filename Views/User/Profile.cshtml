            </div>
            <div class="col">
                <button type="button" class="btn btn-navbar btn-sm w-100 btn-open-container" id="EditSecuritySettings_Container-Open"> <i class="fas fa-cog"></i> <br />Settings</button>
            </div>
            <div class="col d-sm-block d-lg-none d-xl-none d-md-none">
                <button type="button" class="btn btn-navbar btn-sm w-100 smallside-btn-close-n-open" id="Preload_Container-AdditionalOpen"> <i class="fas fa-times-circle text-danger"></i> <br />Close</button>
            </div>
            <div class="col d-none d-lg-block d-xl-block d-md-block">
                <button type="button" class="btn btn-navbar btn-sm w-100 btn-open-container" id="Preload_Container-OpenX"> <i class="fas fa-user-circle"></i> <br />About</button>
            </div>
        </div>
    </div>
</div>

<div class="smallside-box-container shadow-standard" id="EditPersonalInfo_Container">
    <div class="header-container p-3 pb-2" id="EditPersonaInfo_Conainer-Header">
        <button type="button" class="btn btn-close btn-sm float-end mt-1" aria-label="close" id="EditPersonalInfo_Container-Close"></button>
        @if (UserInfo?.CountryId == null)
        {
            <span class="badge bg-light text-dark fw-normal float-end mt-2" id="CurrentCountry_Badge"> <i class="fas fa-globe-americas"></i> Current: not selected</span>
        }
        else
        {
            <span class="badge bg-primary fw-normal float-end mt-2" id="CurrentCountry_Badge"> <i class="fas fa-globe-americas"></i> Current: @UserInfo.Country?.ISO, @UserInfo.Country?.Name</span>
        }
        <h5 class="h5 text-truncate">Edit Personal</h5>
    </div>
    <div class="mt-2 p-3 pt-0">
        <form method="post" asp-controller="Account" asp-action="EditPersonalInfo" id="EditPersonalInfo_Form">
            <div class="d-none">
                <input type="hidden" name="Id" value="@UserInfo?.Id" />
                <input type="hidden" name="CreatedAt" id="EPI_CreatedAt" value="@UserInfo?.CreatedAt" />
            </div>
            <div>
                @if (UserInfo?.CreatedAt != null)
                {
                    <div class="row">
                    <label class="form-label fw-500">Set date of birth/creation ∙ <span class="card-text text-muted fw-normal" id="EPI_DateInfo">@UserInfo.CreatedAt?.Day/@UserInfo.CreatedAt?.Month/@UserInfo.CreatedAt?.Year</span></label>
                        <div class="col col-4">
                            <input type="number" id="EPI_Date_Day" class="number-form-control w-100" placeholder="0" value="@UserInfo.CreatedAt?.Day" min="1" max="31" />
                        </div>
                        <div class="col col-4">
                            <input type="number" id="EPI_Date_Month" class="number-form-control w-100" placeholder="0" value="@UserInfo.CreatedAt?.Month" min="1" max="12" />
                        </div>
                        <div class="col col-4">
                            <input type="number" id="EPI_Date_Year" class="number-form-control w-100" placeholder="0" value="@UserInfo.CreatedAt?.Year" min="1875" max="@DateTime.Now.Year" />
                        </div>
                    </div>
                }
                else
                {
                    <label class="form-label fw-500" id="EPI_DateInfo">Set date of birth/creation (dd/mm/yyyy) <span class="card-text text-muted">01/01/@DateTime.Now.Year</span></label>
                    <div class="row">
                        <div class="col col-4">
                            <input type="number" id="EPI_Date_Day" class="number-form-control w-100" placeholder="0" value="1" min="1" max="31" />
                        </div>
                        <div class="col col-4">
                            <input type="number" id="EPI_Date_Month" class="number-form-control w-100" placeholder="0" value="1" min="1" max="12" />
                        </div>
                        <div class="col col-4">
                            <input type="number" id="EPI_Date_Year" class="number-form-control w-100" placeholder="0" value="@DateTime.Now.Year" min="1840" max="@DateTime.Now.Year" />
                        </div>
                    </div>
                }
                <div class="mt-3">
                    <label class="form-label fw-500">Select Your Country</label>
                    <input type="text" list="SelectCountry" id="CountryId" class="form-control datalist-select" name="CountryId" placeholder="Find it here" />
                    <datalist class="datalist" id="SelectCountry">
                        <option selected value="0">Enter country to find easier</option>
                        @foreach (Country Item in ViewBag.Countries)
                        {
                            <option value="@Item.Id">@Item.ISO, @Item.Name</option>
                        }
                    </datalist>
                </div>
                <div class="mt-3">
                    @if (UserInfo!.IsCompany)
                    {
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="EPI_IsCompany" name="IsCompany" checked value="true" />
                            <label class="form-check-label fw-500" for="EPI_IsCompany">Are you a company?</label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="EPI_IsCompany" name="IsCompany" value="false" />
                            <label class="form-check-label fw-500" for="EPI_IsCompany">Are you a company?</label>
                        </div>
                    }
                </div>
                <div class="ms-1">
                   <small class="card-text text-muted">If you are a personal user switch to off</small>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary w-100 btn-standard-with-no-colour">Submit Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="smallside-box-container p-3 shadow-standard" id="EditAccount_Container">
