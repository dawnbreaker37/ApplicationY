@model CreateProject_ViewModel
@{
    ViewData["Title"] = "Edit Project";

    User? UserInfo = ViewBag.UserInfo;
    Project? ProjectInfo = ViewBag.ProjectInfo;
    string? FullText = ViewBag.FullText;
}

<div class="main-sidebar p-2 shadow-sm" id="Main_SideBar">
    @if (UserInfo != null)
    {
        <div class="d-none">
            <input type="hidden" id="PageInfo_UserId" value="@UserInfo.Id" />
            <form method="get" asp-controller="Notifications" asp-action="GetNotifications" id="GetNotifications_Form">
                <input type="hidden" name="Id" value="@UserInfo.Id" />
            </form>
            <form method="get" asp-controller="Messages" asp-action="GetAll" id="GetAllMessages_Form">
                <input type="hidden" name="Id" value="@UserInfo.Id" />
            </form>
            <form method="get" asp-controller="Messages" asp-action="GetAllSent" id="GetAllSentMessages_Form">
                <input type="hidden" name="Id" value="@UserInfo.Id" />
            </form>
            <form method="post" asp-controller="Project" asp-action="EditAudioTitle" id="EditAudioTitle_Form">
                <input type="hidden" name="Id" id="EAT_Id_Val" value="0" />
                <input type="hidden" name="Title" id="EAT_Title_Val" value="" />
            </form>
            <form method="post" asp-controller="Project" asp-action="RemoveAudio" id="RemoveAudio_Form">
                <input type="hidden" name="Id" id="RA_Id_Val" value="0" />
                <input type="hidden" name="ProjectId" value="@ProjectInfo.Id" />
            </form>
        </div>
    }

    <div class="box-container shadow-sm p-3 text-center">
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-navbar btn-sm w-100 btn-open-container" id="Preload_Container-Open"> <i class="fas fa-pencil-alt"></i> <br />Edit</button>
            </div>
            <div class="col">
                <a asp-controller="Project" asp-action="Info" asp-route-Id="@ProjectInfo.Id" class="btn btn-navbar btn-sm w-100"> <i class="far fa-folder-open"></i> <br />Project</a>
            </div>
            <div class="col d-sm-block d-lg-none d-xl-none d-md-none">
                <button type="button" class="btn btn-navbar btn-sm w-100 smallside-btn-close-n-open" id="Preload_Container-AdditionalOpen"> <i class="fas fa-times-circle text-danger"></i> <br />Close</button>
            </div>
        </div>
    </div>

