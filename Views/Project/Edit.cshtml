    <div class="smallside-box-container shadow-standard" id="AboutDonationRules_Container">
        <div class="header-container p-3 pb-2" id="AddDonationRules_Container-Header">
            <button type="button" class="btn btn-back float-end btn-sm ms-1">&larr; Back</button>
            <h5 class="h5 text-truncate">About Donation Rules</h5>
        </div>
        <div class="mt-2 p-3 pt-0">

        </div>
    </div>

    <div class="smallside-box-container shadow-standard" id="AddDonationRules_Container">
        <div class="header-container p-3 pb-2" id="AddDonationRules_Container-Header">
            <button type="button" class="btn btn-close float-end ms-1" aria-label="close" id="AddDonationRules_Container-Close"></button>
