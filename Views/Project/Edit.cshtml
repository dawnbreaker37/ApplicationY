    <div class="smallside-box-container shadow-standard" id="AddUpdate_Container">
        <div class="header-container p-3 pb-2" id="AddUpdate_Container-Header">
            <button type="button" class="btn btn-close float-end ms-1" aria-label="close" id="AddUpdate_Container-Close"></button>
            <h5 class="h5 text-truncate">Add Release Note</h5>
        </div>
        <div class="mt-2 p-3 pt-0">
            <div class="box-container bg-light p-2">
                <h6 class="h6"> <i class="fas fa-sync-alt"></i> What's a <span class="text-primary">Release Note</span>?</h6>
                <small class="card-text text-muted"><span class="text-primary">Release Note</span> is a special way to notify your followers and subscribers about the latest updates of your project(s) and make the updates more visible for you and everyone else too</small>
            </div>
            <div class="mt-2">
                <form method="post" asp-controller="Project" asp-action="AddUpdate" id="AddUpdate_Form">
                    <div>
                        <input type="hidden" name="Id" value="@ProjectInfo.Id" />
                        <label class="form-label fw-500 ms-1">Title</label>
                        <input type="text" class="form-control" name="Title" maxlength="75" placeholder="Enter the title for your release note" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label fw-500 ms-1">Description</label>
                        <textarea rows="4" class="form-control" id="AddUpdate_Description_Val" name="Description" maxlength="750" placeholder="Enter the description for your release note"></textarea>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100 btn-standard-with-no-colour"> <i class="fas fa-plus"></i> Add Release Note</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="smallside-box-container shadow-standard" id="AddAudios_Container">
        <div class="header-container p-3 pb-2" id="AddAudios_Container-Header">
            <button type="button" class="btn btn-close float-end ms-1" aria-label="close" id="AddAudios_Container-Close"></button>
            <h5 class="h5 text-truncate">Audios</h5>
        </div>
        <div class="mt-1 ms-2 me-2 bordered-container p-2">
            <h6 class="h6">Current Audios</h6>
            @if(ViewBag.AudiosCount == 0)
            {
                <div class="text-center mt-3" id="NoAudios_Box">
                    <h3 class="h3"> <i class="fas fa-pause"></i> </h3>
                    <h5 class="h5 safe-font">No Current Audio Files</h5>
                    <small class="card-text text-muted">You can add some audios now</small>
                </div>
                <div class="mt-1" style="display: none;" id="HaveAudios_Box">
                    <small class="card-text text-muted">You've got <strong id="AudioFilesCount_Lbl">0</strong> audio file(s)</small>
                </div>
            }
            else
            {
                <div class="text-center mt-3" style="display: none;" id="NoAudios_Box">
                    <h3 class="h3"> <i class="fas fa-pause"></i> </h3>
                    <h5 class="h5 safe-font">No Current Audio Files</h5>
                    <small class="card-text text-muted">You can add some audios now</small>
                </div>
                <div class="mt-1" id="HaveAudios_Box">
                    <small class="card-text text-muted">You've got <strong id="AudioFilesCount_Lbl">@ViewBag.AudiosCount</strong> audio file(s)</small>
                    <div class="mt-2">
                        @foreach (Audio Item in ViewBag.Audios)
                        {
                            <div class="mt-1 mb-1" id="AudioFullBox-@Item.Id">
                                <input type="hidden" id="AudioSrc-@Item.Id" value="/ProjectAudios/@Item.Name" />
                                <div class="box-container bg-light p-2">
                                    <div>
                                        <input type="text" class="no-borders-form-control edit-audio-form-control" autocomplete="off" maxlength="40" id="EditAudioTitle-@Item.Id" value="@Item.Title" placeholder="Enter audio's title" />
                                    </div>
                                    <div class="d-inline-block mt-2">
                                        <button type="button" class="btn btn-light btn-standard-with-no-colour border-0 btn-sm btn-audio-backward me-1" id="AudioBackwardBtn-@Item.Id"> <i class="fas fa-backward btn-audio-backward" id="AudioBackwardIcon-@Item.Id"></i> </button>
                                        <button type="button" class="btn btn-light btn-standard-with-no-colour border-0 btn-sm btn-play-audio me-1" id="PlayAudioBtn-@Item.Id"> <i class="fas fa-play btn-play-audio" id="PlayAudioIcon-@Item.Id"></i> </button>
                                        <button type="button" class="btn btn-light btn-standard-with-no-colour border-0 btn-sm btn-pause-audio me-1 d-none" id="PauseAudioBtn-@Item.Id"> <i class="fas fa-pause btn-pause-audio" id="PauseAudioIcon-@Item.Id"></i> </button>
                                        <button type="button" class="btn btn-light btn-standard-with-no-colour border-0 btn-sm btn-mute-audio me-1" id="MuteAudioBtn-@Item.Id"> <i class="fas fa-volume-up btn-mute-audio" id="MuteAudioIcon-@Item.Id"></i> </button>
                                        <button type="button" class="btn btn-light btn-standard-with-no-colour border-0 btn-sm btn-unmute-audio me-1 d-none" id="UnmuteAudioBtn-@Item.Id"> <i class="fas fa-volume-mute btn-unmute-audio" id="UnmuteAudioIcon-@Item.Id"></i> </button>
                                        <button type="button" class="btn btn-light btn-standard-with-no-colour border-0 btn-sm btn-remove-audio me-1" id="RemoveAudio-@Item.Id"> <i class="fas fa-times btn-remove-audio text-danger" id="RemoveAudioIcon-@Item.Id"></i> </button>
                                        <small class="card-text pt-4 fw-500" id="AudioDuration-@Item.Id">00:00/00:00</small>
                                        <div class="box-container bg-secondary rounded-pill mt-1 ms-1 standard-transition">
                                            <div class="box-container bg-dark audio-progress rounded-pill" id="AudioDurationProgress-@Item.Id" style="width: 0; height: 5px;"></div>
                                        </div>
                                    </div>
                                    <audio preload="metadata" id="AudioControl-@Item.Id">
                                        <source src="/ProjectAudios/@Item.Name" type="audio/mp3" />
                                        <source src="/ProjectAudios/@Item.Name" type="audio/ogg" />
                                    </audio>
                                </div>
                            </div>
                            <div class="mt-2">
                                <small class="card-text text-muted mt-2">Select audio's title to edit it</small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="mt-2">
            <div class="p-2">
                <form method="post" asp-controller="Project" asp-action="EditProjectAudios" enctype="multipart/form-data" id="EditProjectAudios_Form">
                    <div class="ms-1">
                        <input type="hidden" name="Id" id="EPA_Val_Id" value="@ProjectInfo.Id" />
                        <label class="form-label fw-500" for="Audios">Choose Audio</label>
                    </div>
                    <div>
                        <div id="Audios-Get" class="upload-file-btn">Click to Upload</div>
                        <div class="d-none">
                            <input type="file" name="Audios" id="Audios" multiple accept=".mp3, .mpeg, .m4a, .aac, .wav, .aiff, .flac" onchange="sub(this);" />
                        </div>
                    </div>
                    <div class="ms-1">
                        <small class="card-text text-muted" id="ChosenAudioName_Lbl">You can upload up to 4 audios per project</small>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary btn-standard-with-no-colour w-100">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="smallside-box-container shadow-standard" id="AddImages_Container">
        <div class="header-container p-3 pb-2" id="AddImages_Container-Header">
            <button type="button" class="btn btn-close float-end ms-1" aria-label="close" id="AddImages_Container-Close"></button>
            <h5 class="h5 text-truncate">Images</h5>
        </div>
        <div class="p-2">
            <div class="d-none">
                <form method="post" asp-controller="Project" asp-action="RemoveImage" id="RemoveImage_Form">
                    <input type="hidden" name="ProjectId" value="@ProjectInfo.Id" />
                    <input type="hidden" name="Id" id="RI_ImageId_Val" value="0" />
                </form>
            </div>
            <div class="mt-1 bordered-container p-2">
                <h6 class="h6">Current Images</h6>
                <input type="hidden" id="CurrentImgs_Count" value="@ViewBag.ImgsCount" />
                @if(ViewBag.ImgsCount == 0)
                {
                    <div class="text-center mt-4" id="NoImages_Box">
                        <h1 class="h1"> <i class="far fa-images"></i> </h1>
                        <h6 class="h6 safe-font">You have no uploaded images yet</h6>
                        <small class="card-text text-muted">Try to upload some new images now</small>
                    </div>
                    <div class="mt-3 horizontal-scrolled-container scrollbar-hidden" style="display: none;" id="HaveImages_Box">
                    </div>
                }
                else
                {
                    <div class="text-center mt-4" style="display: none;" id="NoImages_Box">
                        <h1 class="h1"> <i class="far fa-images"></i> </h1>
                        <h6 class="h6 safe-font">You have no uploaded images yet</h6>
                        <small class="card-text text-muted">Try to upload some new images now</small>
                    </div>
                    <div class="mt-3 horizontal-scrolled-container" id="HaveImages_Box">
                        @foreach(GetProjectImages_ViewModel Item in ViewBag.Images)
                        {
                            <div class="box-container bg-transparent me-2 img-box d-inline-block" id="ProjectImg-@Item.Id">
                                <img class="image-preview-box set-as-main" id="ImgSettings-@Item.Id" src="/ProjectPhotos/@Item.Name" alt="Cannot display this image" />
                                <button type="button" class="btn btn-text btn-standard-with-no-colour d-block border-0 btn-sm mt-1 me-1 text-center btn-remove-img d-inline" id="BtnRemoveImg-@Item.Id"> <i class="fas fa-trash-alt text-danger"></i> Remove</button>
                            </div>
                        }
                    </div>
                    <small class="card-text text-muted mt-1">Click on the image once to set it as main</small>
                }
            </div>
        </div>
        <div>
            <div class="p-2">
                <div class="d-none">
                    <form method="post" asp-controller="Project" asp-action="SetAsMainImg" id="SetAsMainImg_Form">
                        <input type="hidden" name="Id" id="SMI_Id_Val" value="0" />
                        <input type="hidden" name="ProjectId" value="@ProjectInfo.Id" />
                    </form>
                </div>
                <form method="post" asp-controller="Project" asp-action="EditProjectImages" enctype="multipart/form-data" id="EditProjectImages_Form">
                    <div class="ms-1">
                        <input type="hidden" name="Id" id="EPI_Val_Id" value="@ProjectInfo.Id" />
                        <input type="hidden" name="Id" id="EPI_Val_MainPhotoNum" value="0" />
                        <label class="form-label fw-500" for="Images">Choose Images</label>
                    </div>
                    <div>
                        <div id="Images-Get" class="upload-file-btn">Click to Upload</div>
                        <div class="d-none">
                            <input type="file" name="Images" id="Images" multiple accept=".png, .jpg, .jpeg" onchange="sub(this);" />
                        </div>
                    </div>
                    <div class="ms-1">
                        <small class="card-text text-muted" id="ChosenFileName_Lbl">You can upload up to 6 images per project</small>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary btn-standard-with-no-colour w-100">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

